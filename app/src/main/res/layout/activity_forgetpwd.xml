<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/themepadding"
        android:layout_marginRight="@dimen/themepadding"
        android:orientation="horizontal"
        android:weightSum="97">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="26"
            android:gravity="center_vertical|left"
            android:text="手机号码" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="71"
            android:background="@drawable/boarder_bottom_gray">

            <EditText
                android:id="@+id/forgetpwd_telephone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="请输入手机号码"
                android:singleLine="true" />

            <Button
                android:id="@+id/forgetpwd_obtain_verifycode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="获取验证码" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/themepadding"
        android:layout_marginRight="@dimen/themepadding"
        android:orientation="horizontal"
        android:weightSum="97">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="26"
            android:gravity="center_vertical|left"
            android:text="短信验证码" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="71"
            android:background="@drawable/boarder_bottom_gray">

            <EditText
                android:id="@+id/forgetpwd_sms_verifycode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="请输入您手机验证码"
                android:singleLine="true" />

            <Button
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/themepadding"
        android:layout_marginRight="@dimen/themepadding"
        android:orientation="horizontal"
        android:weightSum="97">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="26"
            android:gravity="center_vertical|left"
            android:text="新密码" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="71"
            android:background="@drawable/boarder_bottom_gray">

            <EditText
                android:id="@+id/forgetpwd_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="请输入手机号码"
                android:singleLine="true" />

            <Button
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""
                android:visibility="invisible" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/themepadding"
        android:layout_marginRight="@dimen/themepadding"
        android:orientation="horizontal"
        android:weightSum="97">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="26"
            android:gravity="center_vertical|left"
            android:text="新确认密码" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="71"
            android:background="@drawable/boarder_bottom_gray">

            <EditText
                android:id="@+id/forgetpwd_new_pwd_twice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="请输入手机号码"
                android:singleLine="true" />

            <Button
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4" />

    <Button
        android:id="@+id/forgetpwd_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="19" />
</LinearLayout>
